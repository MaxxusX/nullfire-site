---
interface Props {
	title: string;
	nopadx: boolean?;
}

const { title, nopadx } = Astro.props;
---

<section class="Section">
	<h2 class="Section-Title">{title}</h2>
	<div class:list={[ "Section-Content", {"Section-Content-NoPadX": nopadx} ]}>
		<slot />
	</div>
</section>

<style>
	.Section {
		display: table;
		box-sizing: border-box;
		text-indent: 0;
		background-color: var(--ui-color);
		padding: 1rem;
		margin-top: 30px;
	}

	.Section-Title {
		background-color: #5553;
		border: 0.1rem #0003 solid;
		padding: 0.3rem;
		margin-bottom: 1rem;
	}

	.Section-Content {
		margin-top: 0;
		padding-top: 0;
		margin-bottom: 0;
		padding-bottom: 0;
	}

	.Section-Content-NoPadX {
		> :first-child {
			margin-top: 0;
			padding-top: 0;
		}

		> :last-child {
			margin-bottom: 0;
			padding-bottom: 0;
		}
	}
</style>
