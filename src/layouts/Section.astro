---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<section class="Section">
	<h2 class="Section-Title">{title}</h2>
	<div class="Section-Content">
		<slot />
	</div>
</section>

<style>
	.Section {
		display: table;
		box-sizing: border-box;
		text-indent: 0;
		background-color: var(--ui-color);
		padding: 1rem;
		margin-top: 30px;
	}

	.Section-Title {
		background-color: #5553;
		border: 0.1rem #0003 solid;
		padding: 0.3rem;
		margin-bottom: 1rem;
	}

	.Section-Content {
		margin-top: 0;
		padding-top: 0;
		margin-bottom: 0;
		padding-bottom: 0;
	}

  .Section-TextContent {
    > :first-child {
			padding-top: 0;
			margin-top: 0;
		}

		> :last-child {
			padding-bottom: 0;
			margin-bottom: 0;
    }
  }
</style>
