---
interface Props {
	path: string;
	title: string;
}

const { path, title } = Astro.props;

// components
import Head from "../components/Head.astro";

// images
import bgImage from "../assets/reception_blur.webp";

// stylesheets
import "../styles/main.css";
---

<!doctype html>
<html lang="en-US">
	<Head path={path} title={title}>
		<meta name="theme-color" content="#651089"/>
		<Fragment slot="preload">
			<link
				rel="preload"
				href={bgImage.src}
				as="image"
				fetchpriority="high"
				referrerpolicy="no-referrer"
			/>
			<link
				rel="preload"
				href="/fonts/JetBrainsMono.woff2"
				as="font"
				fetchpriority="low"
				referrerpolicy="no-referrer"
			/>
			<link
				rel="preload"
				href="/fonts/JetBrainsMono-Italic.woff2"
				as="font"
				fetchpriority="low"
				referrerpolicy="no-referrer"
			/>
		</Fragment>
	</Head>
	<body style={`background-image: url('${bgImage.src}');`}>
		<main>
			<slot />
		</main>
	</body>
</html>
