	h1,
	h2 {
		margin-bottom: 0.2em;
		line-height: 1;
		margin-top: 0;
		text-align: center;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		color: #eee;
	}
	h2 {
		color: #dedede;
		font-size: 1.5rem;
		font-weight: 600;
	}

	code {
		font-family: var(--font-code);
	}

	a {
		font-weight: 600;
		color: #ddd;
		text-decoration: underline solid #44f 2px;
	}

	.icon {
		height: inherit;
		width: auto;
		aspect-ratio: 1/1;
	}

	.pwrful {
		font-weight: bold;
		font-style: italic;
		text-decoration: 5px #ff0000 solid underline;
	}

	@keyframes imprtntgrow {
		from {
			text-decoration-thickness: 2px;
			text-decoration-color: #ff000088;
		}
		to {
			text-decoration-thickness: 4px;
			text-decoration-color: #ff0000bb;
		}
	}
	@keyframes imprtntshrink {
		from {
			text-decoration-thickness: 4px;
			text-decoration-color: #ff0000bb;
		}
		to {
			text-decoration-thickness: 2px;
			text-decoration-color: #ff000088;
		}
	}
	.imprtnt {
		font-weight: 600;
		text-decoration: 1px #ff000077 solid underline;
		animation: 75ms ease-in-out 0ms imprtntshrink both;
	}
	.imprtnt:hover {
		animation: 75ms ease-in-out 0ms imprtntgrow both;
	}

