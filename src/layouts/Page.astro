---
interface Props {
	title: string;
}

const { title } = Astro.props;

if (!Astro.site) throw new Error("pls define the site url in the config thx");

import favicon from "../assets/favicon.webp";
import reception_blur from "../assets/reception_blur.webp";
import SEO from "../components/SEO.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<SEO
			url={Astro.site}
			sitename="NullFire"
			pagename={title}
			desc="NullFire is a powerful Roblox script hub with countless features and a wide array of supported games."
			tags="nullfire, roblox, hacks, scripts, exploits, script hub"
			icon={favicon}
			iconAlt="NullFire Logo"
			themeColor="#13151a"
		/>

		<link
			rel="preload"
			href={reception_blur.src}
			as="image"
			fetchpriority="high"
			referrerpolicy="no-referrer"
		/>
	</head>
	<body style={`background-image: url('${reception_blur.src}');`}>
		<main>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
		--font-sans: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu,
			Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
		--font-code: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace, monospace;
		--fallback-bg-color: #0e0f13; /* #13151a; */
		--ui-color: #0004;
		--header-color: #0001;
		--outline: 2px solid #f009;

		color-scheme: dark;
	}

	html {
		margin: 0;
		padding: 0;
		overflow-x: hidden;
		font-family: var(--font-sans);
		line-height: 1.6;
		font-size: 19px;
		color: #ddd;
	}

	body {
		margin: 0;
		padding: 0;
		overflow-x: hidden;
		background: fixed no-repeat center top/cover border-box var(--fallback-bg-color);
	}

	main {
		overflow-x: hidden;
		position: absolute;
		margin: 0;
		padding: 5svh 5svh;
		padding-top: 3svh;
		display: grid;
		align-items: center;
		align-content: space-around;
		justify-content: center;
		justify-items: stretch;
		background-color: var(--ui-color);
	}

	h1,
	h2 {
		margin-bottom: 0.2em;
		line-height: 1;
		margin-top: 0;
		text-align: center;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		color: #eee;
	}
	h2 {
		color: #dedede;
		font-size: 1.5rem;
		font-weight: 600;
	}

	code {
		font-family: var(--font-code);
	}

	a {
		font-weight: 600;
		color: #ddd;
		text-decoration: underline solid #44f 2px;
	}

	.icon {
		height: inherit;
		width: auto;
		aspect-ratio: 1/1;
	}

	.pwrful {
		font-weight: bold;
		font-style: italic;
		text-decoration: 5px #ff0000 solid underline;
	}

	@keyframes imprtntgrow {
		from {
			text-decoration-thickness: 2px;
			text-decoration-color: #ff000088;
		}
		to {
			text-decoration-thickness: 4px;
			text-decoration-color: #ff0000bb;
		}
	}
	@keyframes imprtntshrink {
		from {
			text-decoration-thickness: 4px;
			text-decoration-color: #ff0000bb;
		}
		to {
			text-decoration-thickness: 2px;
			text-decoration-color: #ff000088;
		}
	}
	.imprtnt {
		font-weight: 600;
		text-decoration: 1px #ff000077 solid underline;
		animation: 75ms ease-in-out 0ms imprtntshrink both;
	}
	.imprtnt:hover {
		animation: 75ms ease-in-out 0ms imprtntgrow both;
	}

	.lead {
		margin-top: 0;
		margin-bottom: 15px;
		font-weight: 500;
		color: #e5e5e5;
		font-size: 1.5rem;
		text-align: center;
	}

	.no-pad-y {
		margin-top: 0;
		padding-top: 0;
		margin-bottom: 0;
		padding-top: 0;
	}
</style>
