---
interface Props {
	title: string;
}

const { title } = Astro.props;

import favicon from "../assets/favicon.webp";
import reception_blur from "../assets/reception_blur.webp";
---

<!doctype html>
<html lang="en" style={`--bg: url(${reception_blur.src})`}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />

		<meta name="description" content="" />

		<link
			rel="preload"
			href={reception_blur.src}
			as="image"
			fetchpriority="high"
			referrerpolicy="no-referrer"
		/>

		<link rel="icon" href={favicon.src} fetchpriority="low" referrerpolicy="no-referrer" />
		<title>{title}</title>
	</head>
	<body>
		<!--
		<header>
			<Image src={favicon} class="icon" alt="NullHub Logo" />
		</header>
		<main>
			<slot />
		</main>
	-->
		<slot />
	</body>
</html>

