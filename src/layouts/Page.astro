---
interface Props {
	title: string;
}

const { title } = Astro.props;

import "./vars.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/img/favicon_transparent.png" />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<img src="/img/favicon_transparent.png" class="icon" />
		</header>
		<main>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	html {
		font-family: var(--font-sans);
		color: #dddddd;
		line-height: 1.6;
		font-size: 19px;
		margin: 0;
		background: url("/img/reception_blur.webp") fixed no-repeat center
			top/100lvw 100lvh #13151a;
		overflow: hidden scroll;
	}

	body {
		margin: 0;
		overflow: hidden scroll;
	}

	header {
		padding: 0.15rem;
		background-color: var(--header-color);
		width: 100%;
		height: 2.5rem;
		z-index: 100;
		top: 0;
		text-align: center;
		position: relative;
		justify-content: center;
		align-items: center;
		display: flex;
	}

	main {
		position: relative;
		margin: 1.35rem auto;
		padding: 5dvh 5dvh;
		padding-top: 3dvh;
		width: 100%;
		max-width: 80dvw;
		display: grid;
		align-items: center;
		align-self: center;
		align-content: space-around;
		justify-content: space-evenly;
		justify-items: stretch;
		background-color: var(--ui-color);
		backdrop-filter: blur(5px);
		border-radius: 1rem;
	}
	@media (max-width: 50rem) {
		main {
			border-radius: 0;
			margin: 0 auto;
			padding: 0;
			padding-top: 0.5rem;
			padding-bottom: 0.5rem;
			max-width: none;
			width: 100dvw;
		}
	}

	h1,
	h2 {
		margin-bottom: 0.2em;
		line-height: 1;
		margin-top: 0;
		text-align: center;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		color: #eeeeee;
	}
	h2 {
		color: #dedede;
		font-size: 1.5rem;
		font-weight: 600;
	}

	code {
		font-family: var(--font-code);
	}

	a {
		font-weight: 600;
		color: #ffcccc;
		text-decoration: underline dotted #ff0000cc 0.2rem;
	}
	a:hover {
		color: #ff8888;
		text-decoration: underline dotted #ff0000 0.2rem;
	}

	.icon {
		height: inherit;
		aspect-ratio: 1/1;
	}

	.pwrful {
		font-weight: bold;
		font-style: italic;
		text-decoration: 5px #ff0000 solid underline;
	}

	@keyframes imprtntgrow {
		from {
			text-decoration-thickness: 2px;
			text-decoration-color: #ff000088;
		}
		to {
			text-decoration-thickness: 4px;
			text-decoration-color: #ff0000bb;
		}
	}
	@keyframes imprtntshrink {
		from {
			text-decoration-thickness: 4px;
			text-decoration-color: #ff0000bb;
		}
		to {
			text-decoration-thickness: 2px;
			text-decoration-color: #ff000088;
		}
	}
	.imprtnt {
		font-weight: 600;
		text-decoration: 1px #ff000077 solid underline;
		animation: 75ms ease-in-out 0ms imprtntshrink both;
	}
	.imprtnt:hover {
		animation: 75ms ease-in-out 0ms imprtntgrow both;
	}

	.lead {
		margin-top: 0;
		margin-bottom: 15px;
		font-weight: 500;
		color: #e5e5e5;
		font-size: 1.5rem;
		text-align: center;
	}
</style>
