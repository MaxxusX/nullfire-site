---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
	image: ImageMetadata;
	title: string;
	borderlessImg?: boolean;
}

const { image, title, borderlessImg } = Astro.props;
---

<section class="Card">
	<Image
		src={image}
		class:list={["Card-Icon", { "Card-Icon-Borderless": borderlessImg }]}
		crossorigin="anonymous"
		referrerpolicy="no-referrer"
		aria-hidden="true"
		alt=""
	/>
	<h3 class="Card-Title">{title}</h3>
	<slot />
</section>

<style>
	.Card {
		font-size: 1rem;
		padding: 1rem;
		margin: 0;
		width: 9rem;
		display: inline-block;
		background-color: #0004;
		border: 2px solid #f009;
		text-align: center;
		box-sizing: content-box;

		> :global(*) {
			padding: 0;
			margin: 0;
		}
	}

	.Card-Icon {
		display: block;
		width: 9rem;
		height: 9rem;
		aspect-ratio: 1/1;
		border: 2px solid #f009;

		&.Card-Icon-Borderless {
			border: hidden;
		}
	}

	.Card-Title {
		margin-top: 0.5rem;
	}
</style>
