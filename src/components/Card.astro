---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
	image: ImageMetadata;
	title: string;
	borderlessImg?: boolean;
}

const { image, title, borderlessImg } = Astro.props;
---

<section class="Card">
	<Image
		src={image}
		class:list={["Card-Icon", { "Card-Icon-Borderless": borderlessImg }]}
		crossorigin="anonymous"
		referrerpolicy="no-referrer"
		aria-hidden="true"
		alt=""
	/>
	<h2 class="Card-Title">{title}</h2>
	<slot />
</section>

<style>
	.Card {
		padding: 1rem;
		margin: 0;
		width: 9rem;
		display: inline-block;
		background-color: var(--ui-color);
		outline: var(--outline);
		text-align: center;
		box-sizing: content-box;

		> :global(*) {
			padding: 0;
			margin: 0;
		}
	}

	.Card-Icon {
		display: block;
		width: 9rem;
		height: 9rem;
		aspect-ratio: 1/1;
		outline: var(--outline);

		&.Card-Icon-Borderless {
			outline: none;
		}
	}

	.Card-Title {
		margin-top: 0.5rem;
	}
</style>
