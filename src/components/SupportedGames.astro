---
interface Props {};

console.info("requesting supported games...");
const response = await fetch("https://raw.githubusercontent.com/TeamNullFire/NullFire/refs/heads/main/games.json");

if (response.ok) throw new Error("request for supported games failed");

const data: { [string]: string } = await response.json();
console.info("successfully received supported games!");
---

<ul class="SupportedGames">
{data.entries().map(gameData => (
	<li><span>{gameData[0]}</span>: <span>{gameData[1]}</span></li>
))}
</ul>

<style is:global>
.SupportedGames {
	& > li > span:nth-of-type(1) {
		font-weight: bold;
	}
	& > li > span:nth-of-type(2) {
		font-style: italic;
	}
}
</style>
