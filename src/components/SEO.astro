---
import type { ImageMetadata } from "astro";

interface Props {
	url: URL;
	sitename: string;
	pagename: string;
	desc: string;
	tags: string;
	favicon: ImageMetadata;
	embedImage?: ImageMetadata;
	embedImageWidth?: number;
	embedImageHeight?: number;
	embedImageAlt?: string;
	themeColor: string;
}

const { url, sitename, pagename, desc, tags, favicon, embedImage, embedImageWidth, embedImageHeight, embedImageAlt, themeColor } = Astro.props;
if (embedImage && !embedImageAlt) throw new Error("embedImage requires embedImageAlt");

const pagetitle = `${sitename} | ${pagename}`;

const ogImage = embedImage && new URL(embedImage.src, url);
const ogImageWidth = embedImage && ( embedImageWidth?.toString() ?? embedImage.width.toString() );
const ogImageHeight = embedImage && ( embedImageHeight?.toString() ?? embedImage.height.toString() );
const ogImageAlt = embedImage && embedImageAlt;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="theme-color" content={themeColor ?? "#000"} />

<meta name="referrer" content="no-referrer" />
<meta name="robots" content="index,follow" />

<title>{pagetitle}</title>
<meta name="description" content={desc} />
<meta name="keywords" content={tags} />
<link rel="icon" href={favicon.src} fetchpriority="low" referrerpolicy="no-referrer" />

<link rel="canonical" href={url} />

<meta name="apple-mobile-web-app-title" content={sitename} />

<meta name="og:type" content="website" />
<meta name="og:site_name" content={sitename} />
<meta name="og:title" content={pagetitle} />
<meta name="og:description" content={desc} />
<meta name="og:url" content={url} />

{ ogImage && <Fragment>
	<meta name="og:image" content={ogImage} />
	<meta name="og:image:alt" content={ogImageAlt} />
	<meta name="og:image:width" content={ogImageWidth} />
	<meta name="og:image:height" content={ogImageHeight} />
</Fragment> }

<meta name="twitter:title" content={pagetitle} />
<meta name="twitter:description" content={desc} />
{ ogImage && <meta name="twitter:image:src" content={ogImage} /> }
<meta name="twitter:card" content="summary_large_image" />
