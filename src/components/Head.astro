---
import { getImage } from "astro:assets";
import logo from "@assets/logo.png";

interface Props {
	path: string;
	title: string;
}

const { path, title: pageName } = Astro.props;

const url = new URL(path, Astro.site).href;
const siteName = "NullFire";
const title = `${siteName} | ${pageName}`;
const desc = "NullFire is a powerful Roblox script hub with countless features and a wide array of supported games.";
const tags = "nullfire,nullhub,firehub,mshub revive,roblox,hacks,scripts,exploits,script hub";

const icon = await getImage({
	src: logo.src,
	width: logo.width,
	height: logo.height,
	format: "png",
	quality: "max",
	priority: true
});
const iconAbsoluteSrc = new URL(icon.src, Astro.site).href;
const iconAlt = "NullFire Logo";

const themeColor = "#651089"; // previously #0e0f13
---

<head>
	{/* Site Config */}
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="theme-color" content={themeColor} />
	<meta name="referrer" content="no-referrer" />

	{/* Preload */}
	<slot name="preload" />

	{/* Titlebar Data */}
	<title>{title}</title>
	<link rel="icon" href={icon.src} fetchpriority="low" referrerpolicy="no-referrer" />

	{/* Google Site Verification */}
	<meta name="google-site-verification" content="B2gh4n76Eeh_x1Rm-tNwsvEHCjqIqZzz1lIdO8GeDsY" />

	{/* Common Metadata */}
	<link rel="canonical" href={url} />
	<meta name="description" content={desc} />
	<meta name="keywords" content={tags} />
	<meta name="robots" content="index,follow" />

	{/* Apple Metadata */}
	<meta name="apple-mobile-web-app-title" content={siteName} />
	<link rel="apple-touch-icon" href={icon.src} />
	
	{/* Twitter Metadata */}
	<meta name="twitter:card" content="summary" />
	<meta name="twitter:title" content={title} />
	<meta name="twitter:description" content={desc} />
	<meta name="twitter:image" content={iconAbsoluteSrc} />
	<meta name="twitter:image:alt" content={iconAlt} />
	
	{/* OpenGraph Metadata */}
	<meta property="og:url" content={url} />
	<meta property="og:type" content="website" />
	<meta property="og:site_name" content={siteName} />
	<meta property="og:title" content={title} />
	<meta property="og:description" content={desc} />
	<meta property="og:image" content={iconAbsoluteSrc} />
	<meta property="og:image:alt" content={iconAlt} />
	<meta property="og:image:width" content={icon.attributes.width.toString()} />
	<meta property="og:image:height" content={icon.attributes.height.toString()} />

	{/* Other Data */}
	<slot />
</head>
